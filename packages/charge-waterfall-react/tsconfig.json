{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["ES2015"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "declaration": true,
    "downlevelIteration": true
  },
  "exclude": ["./jest.config.ts", "**/tests", "demo"]
}
